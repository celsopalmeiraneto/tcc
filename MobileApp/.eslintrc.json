{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion" : 8,
        "ecmaFeatures": {
          "jsx": true
        }
    },
    "globals":{
        "document" : false,
        "window" : false,
        "fetch" : false
    },
    "plugins":[
      "react",
      "react-native"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "no-console":[
          "warn"
        ],
        "object-curly-spacing":[
          "error",
          "never"
        ],
        "no-multiple-empty-lines":[
          "error",
          {"max" : 2}
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
